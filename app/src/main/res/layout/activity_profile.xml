<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:id="@+id/linear_layout_profile"
    tools:context=".view.ui.ProfileActivity">

    <include layout="@layout/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/display_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="2"
        android:clickable="true"
        android:contentDescription="@string/profile_image"
        android:focusable="true"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/colorPrimaryDark"
        tools:src="@drawable/ic_person" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorMaterialGreen"
        android:drawableStart="@drawable/ic_file_upload"
        android:drawableLeft="@drawable/ic_file_upload"
        android:padding="8dp"
        android:text="@string/upload"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_person_profile"
        android:drawableLeft="@drawable/ic_person_profile"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:textIsSelectable="false"
        android:textSize="20sp"
        tools:text="Deepak Kumar" />

    <TextView
        android:id="@+id/display_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email_profile"
        android:drawableLeft="@drawable/ic_email_profile"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:textIsSelectable="false"
        android:textSize="20sp"
        tools:text="deepak@gmail.com" />

    <ProgressBar
        android:id="@+id/progress_bar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/logout"
        android:textColor="@color/colorWhite" />

</LinearLayout>